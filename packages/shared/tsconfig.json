{
    "compilerOptions": {
        /* Basic Options */
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "lib": [
            "ESNext"
        ],
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "composite": true,
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
    },
}